<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true"
		android:orientation="vertical">
	
	<RelativeLayout
			android:gravity="center"
			android:orientation="vertical"
			android:fitsSystemWindows="true"
			android:layout_width="match_parent"
			android:layout_height="210dp">
		
		<ImageView
				android:scaleType="centerCrop"
				android:id="@+id/myBackgroundImg"
				android:layout_centerInParent="true"
				android:background="#81C7D4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		
		<LinearLayout
				android:gravity="center"
				android:orientation="vertical"
				android:layout_centerInParent="true"
				android:paddingTop="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<com.liji.circleimageview.CircleImageView
					android:id="@+id/myHeadImg"
					android:src="@drawable/defaulthead"
					app:circle_border_color="#ffffff"
					app:circle_border_width="2dp"
					android:layout_width="100dp"
					android:layout_height="100dp"/>
			
			
			<TextView
					android:id="@+id/myName"
					android:gravity="center"
					android:text="石头"
					android:textColor="@color/white"
					android:paddingTop="5dp"
					android:paddingBottom="3dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			
			<TextView
					android:id="@+id/mySign"
					android:gravity="center"
					android:textColor="@color/white"
					android:paddingLeft="8dp"
					android:paddingRight="8dp"
					android:maxLines="1"
					android:ellipsize="end"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			
		</LinearLayout>
		
	</RelativeLayout>
	
	<LinearLayout
			android:orientation="vertical"
			android:background="#EFF4F7"
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<!--//修改资料-->
		<LinearLayout
				android:id="@+id/change_info"
				android:background="@color/white"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_marginTop="12dp"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:paddingTop="4dp"
				android:paddingBottom="4dp"
				android:gravity="center|left"
				android:layout_height="40dp">
			
			<ImageView
					android:background="@drawable/changeinfo"
					android:layout_marginRight="8dp"
					android:layout_width="32dp"
					android:layout_height="32dp"/>
			
			<TextView
					android:text="资料修改"
					android:gravity="center|left"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>
			
			<ImageView
					android:background="@drawable/arrorright"
					android:layout_width="28dp"
					android:layout_height="28dp"/>
			
		</LinearLayout>
		
		
		<!--//系统通知-->
		<LinearLayout
				android:background="@color/white"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_marginTop="12dp"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:paddingTop="4dp"
				android:paddingBottom="4dp"
				android:gravity="center|left"
				android:layout_height="40dp">
			
			<ImageView
					android:background="@drawable/notice"
					android:layout_marginRight="8dp"
					android:layout_width="32dp"
					android:layout_height="32dp"/>
			
			<TextView
					android:text="系统通知"
					android:gravity="center|left"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>
			
			<ImageView
					android:background="@drawable/arrorright"
					android:layout_width="28dp"
					android:layout_height="28dp"/>
		
		</LinearLayout>
		
		<LinearLayout
				android:background="@color/white"
				android:layout_marginLeft="48dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#bbb" />
		</LinearLayout>
		
		<!--//更多功能-->
		<LinearLayout
				android:background="@color/white"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:paddingTop="4dp"
				android:paddingBottom="4dp"
				android:gravity="center|left"
				android:layout_height="40dp">
			
			<ImageView
					android:background="@drawable/more"
					android:layout_marginRight="8dp"
					android:layout_width="32dp"
					android:layout_height="32dp"/>
			
			<TextView
					android:text="更多功能"
					android:gravity="center|left"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>
			
			<ImageView
					android:background="@drawable/arrorright"
					android:layout_width="28dp"
					android:layout_height="28dp"/>
		
		</LinearLayout>
		
		<LinearLayout
				android:background="@color/white"
				android:layout_marginLeft="48dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			
			<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#bbb" />
		</LinearLayout>
		
		<!--设置-->
		<LinearLayout
				android:background="@color/white"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:paddingTop="4dp"
				android:paddingBottom="4dp"
				android:gravity="center|left"
				android:layout_height="40dp">
			
			<ImageView
					android:background="@drawable/setup"
					android:layout_marginRight="8dp"
					android:layout_width="32dp"
					android:layout_height="32dp"/>
			
			<TextView
					android:text="设置"
					android:gravity="center|left"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>
			
			<ImageView
					android:background="@drawable/arrorright"
					android:layout_width="28dp"
					android:layout_height="28dp"/>
		
		</LinearLayout>
		
		<LinearLayout
				android:layout_marginTop="12dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:gravity="center"
				android:layout_height="40dp">
			
			<TextView
					android:id="@+id/logOut"
					android:gravity="center"
					android:textSize="15dp"
					android:textColor="@color/white"
					android:text="退出登录"
					android:background="@drawable/logoutborder"
					android:layout_width="300dp"
					android:layout_height="match_parent"/>
			
		</LinearLayout>
		
		
	</LinearLayout>
	
</LinearLayout>






<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	android:id="@+id/publicArticleInfo_container"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"

	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/mainBg"
	android:orientation="vertical">
	
		
		<RelativeLayout

				android:gravity="center"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="210dp">
			
			<ImageView
					android:id="@+id/publicArticleInfo_bg"
					android:scaleType="centerCrop"
					android:layout_centerInParent="true"
					android:background="#81C7D4"
					android:layout_width="match_parent"
					android:layout_height="match_parent"/>
			
			<LinearLayout
					android:gravity="center"
					android:orientation="vertical"
					android:layout_centerInParent="true"
					android:paddingTop="20dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				
				<com.liji.circleimageview.CircleImageView
						android:id="@+id/publicArticleInfo_headImg"
						android:src="@drawable/defaulthead"
						app:circle_border_color="#ffffff"
						app:circle_border_width="2dp"
						android:layout_width="100dp"
						android:layout_height="100dp"/>
				
				
				<TextView
						android:id="@+id/publicArticleInfo_name"
						android:gravity="center"
						android:text="石头"
						android:textColor="@color/white"
						android:paddingTop="5dp"
						android:paddingBottom="3dp"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
				
				<TextView
						android:id="@+id/publicArticleInfo_sign"
						android:gravity="center"
						android:textColor="@color/white"
						android:paddingLeft="8dp"
						android:paddingRight="8dp"
						android:maxLines="1"
						android:ellipsize="end"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"/>
			
			</LinearLayout>
		
		</RelativeLayout>
		
		<LinearLayout

				android:orientation="vertical"
				android:background="#EFF4F7"
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
			
			<RelativeLayout
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:layout_width="match_parent"
					android:layout_height="30dp">
				
				<TextView
						android:id="@+id/publicArticleInfo_time"
						android:gravity="center|left"
						android:textColor="#aaa"
						android:layout_centerInParent="true"
						android:layout_alignParentLeft="true"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"/>
				
				<LinearLayout
						android:gravity="center|right"
						android:layout_centerInParent="true"
						android:layout_alignParentRight="true"
						android:layout_width="wrap_content"
						android:layout_height="match_parent">
					
					<ImageView
							android:layout_marginRight="3dp"
							android:background="@drawable/likenum"
							android:layout_width="20dp"
							android:layout_height="20dp"/>
					
					<TextView
							android:id="@+id/publicArticleInfo_likeNum"
							android:textColor="#aaa"
							android:layout_marginRight="15dp"
							android:gravity="center|right"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					
					<ImageView
							android:layout_marginRight="3dp"
							android:background="@drawable/eyes"
							android:layout_width="20dp"
							android:layout_height="20dp"/>
					
					<TextView
							android:id="@+id/publicArticleInfo_lookNum"
							android:textColor="#aaa"
							android:gravity="center|right"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				
				</LinearLayout>
			
			
			</RelativeLayout>
			
				
				<TextView
						android:id="@+id/publicArticleInfo_content"
						android:maxLines = "1000"
						android:scrollbars = "vertical"
						android:lineSpacingExtra="5dp"
						android:textSize="17dp"
						android:layout_weight="1"
						android:textColor="@color/colorPrimaryDark"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:paddingBottom="8dp"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>
				
				<LinearLayout
						android:layout_centerInParent="true"
						android:layout_alignParentBottom="true"
						android:paddingBottom="5dp"
						android:orientation="horizontal"
						android:gravity="center|left"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
					
					<ImageView
							android:id="@+id/publicArticleInfo_return"
							android:layout_marginLeft="20dp"
							android:layout_marginRight="80dp"
							android:background="@drawable/publicarticlereturn"
							android:layout_width="28dp"
							android:layout_height="28dp"/>
					
					<ImageView
							android:id="@+id/publicArticleInfo_like"
							android:layout_marginRight="80dp"
							android:background="@drawable/like"
							android:layout_width="28dp"
							android:layout_height="28dp"/>
				
				</LinearLayout>

			
		
		</LinearLayout>
	

</LinearLayout>


